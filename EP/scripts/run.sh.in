#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# initialize configuration vars

RUN_KEY=""
SR_KEY=0

subrun() { SR_KEY=$((SR_KEY+1)); }

source ${DIR}/../preamble/preamble.sh

BMK_BIN_NAME="@BMK_BIN_NAME@"
BMK_BIN_PREAMBLE="@BMK_BIN_PREAMBLE@"


# set configuration vars

[[ -z ${1} ]] && echo "error: run key was not provided" && exit 1
RUN_KEY=${1}

#

mkdir -p ${RUN_KEY}
cp -rf ${DIR}/${BMK_BIN_NAME} ${RUN_KEY}

pushd ${RUN_KEY}

${BMK_BIN_PREAMBLE} ./${BMK_BIN_NAME} > ${RUN_KEY}.out.${SR_KEY}

RC=$?

popd


exit ${RC}

